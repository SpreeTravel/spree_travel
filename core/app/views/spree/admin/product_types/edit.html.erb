<% content_for :page_title do %>
  <%= Spree.t(:editing_product_type) %>
<% end %>

<% content_for :page_actions do %>
  <%= link_to_with_icon 'arrow-left', Spree.t(:back_to_resource_list, resource: Spree::ProductType.model_name.human), admin_product_types_path, class: 'btn btn-default' %>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @product_type } %>

<%= form_for [:admin, @product_type] do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>

